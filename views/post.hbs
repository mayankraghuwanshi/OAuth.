<div class="container">
    {{# if error}}
        {{# each error}}
            <div class="alert alert-success container mt-5">{{this.msg}}</div>
        {{/each}}
    {{/if}}
    {{# if success_msg}}
        <p>{{success_msg}}</p>
    {{/if}}
    {{#if data}}
        {{# each data}}
            <h2>{{this.title}}</h2>
            <p>{{this.content}}</p>
            <small>{{this.user.firstname}}</small>
            {{# each this.user.comments}}
                <p>{{this.comment}}</p>
            {{/each}}
        {{/each}}
    {{/if}}
</div>
